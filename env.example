# Configuration de l'API Anthropic Claude
ANTHROPIC_API_KEY=XXX
# Configuration du serveur
PORT=3000
NODE_ENV=production

# Configuration des flux RSS
RSS_REFRESH_INTERVAL=300000  # 5 minutes en millisecondes
RSS_MAX_ARTICLES=50

# Configuration des logs
LOG_LEVEL=info
LOG_CLAUDE_REQUESTS=false

# Configuration de sécurité
ALLOWED_ORIGINS=http://localhost:3000,https://votre-domaine.com

# Configuration des limitations
CLAUDE_MAX_TOKENS=4000
CLAUDE_REQUEST_TIMEOUT=30000  # 30 secondes
CLAUDE_RATE_LIMIT=60  # requêtes par minute
